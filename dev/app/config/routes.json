{
    "base": "../views",
    "scripts": "/assets/js/",
    "routes": [
        {
            "name": "home",
            "pattern": "/",
            "path": "home",
            "mainFunction": "showCards"
        },
        {
            "name": "produit",
            "pattern": "/produit/[id:id]",
            "path": "produit",
            "mainFunction": "showCard"
        },
        {
            "name": "panier",
            "pattern": "/panier",
            "path": "panier",
            "mainFunction": "showPanier"
        },
        {
            "name": "panier_confirmation",
            "pattern": "/order",
            "path": "panier_confirmation",
            "mainFunction": ""
        },
        {
            "name": "404",
            "pattern": "/404",
            "path": "404",
            "mainFunction": ""
        },
        {
            "name": "404_json",
            "pattern": "/404/json",
            "path": "404_json",
            "mainFunction": "putUrl"
        }
    ]
}
